    <command:details>
      <command:name>Get-CountingChallenge</command:name>
      <command:verb>Get</command:verb>
      <command:noun>CountingChallenge</command:noun>
      <maml:description>
        <maml:para>An answer to the IronScripter Challenge at https://ironscripter.us/a-powershell-counting-challenge/</maml:para>
      </maml:description>
    </command:details>
    <maml:description>
      <maml:para>Gets the sum and average of every Nth number in a user specified range of positive values.</maml:para>
    </maml:description>
    <command:syntax>
      <command:syntaxItem>
        <maml:name>Get-CountingChallenge</maml:name>
        <command:parameter required="true" variableLength="true" globbing="false" pipelineInput="False" position="0" aliases="Begin, Iterator, LowerLimit, LowerBound">
          <maml:name>Start</maml:name>
          <maml:Description>
            <maml:para>The value at which to start looping through the set.  Must be a non-zero positive number.</maml:para>
          </maml:Description>
          <command:parameterValue required="true" variableLength="false">Int32</command:parameterValue>
          <dev:type>
            <maml:name>Int32</maml:name>
            <maml:uri />
          </dev:type>
          <dev:defaultValue>None</dev:defaultValue>
        </command:parameter>
        <command:parameter required="true" variableLength="true" globbing="false" pipelineInput="False" position="1" aliases="End, Limit, UpperLimit, UpperBound">
          <maml:name>Stop</maml:name>
          <maml:Description>
            <maml:para>The value at which to stop looping through the set.  Must be a non-zero positive number that is at least a multiple of the Start and Interval parameters.</maml:para>
          </maml:Description>
          <command:parameterValue required="true" variableLength="false">Int32</command:parameterValue>
          <dev:type>
            <maml:name>Int32</maml:name>
            <maml:uri />
          </dev:type>
          <dev:defaultValue>None</dev:defaultValue>
        </command:parameter>
        <command:parameter required="true" variableLength="true" globbing="false" pipelineInput="False" position="2" aliases="Step">
          <maml:name>Interval</maml:name>
          <maml:Description>
            <maml:para>The interval at which to loop over the set.  Must be a value between 1 and 10.</maml:para>
          </maml:Description>
          <command:parameterValue required="true" variableLength="false">Int32</command:parameterValue>
          <dev:type>
            <maml:name>Int32</maml:name>
            <maml:uri />
          </dev:type>
          <dev:defaultValue>None</dev:defaultValue>
        </command:parameter>
      </command:syntaxItem>
